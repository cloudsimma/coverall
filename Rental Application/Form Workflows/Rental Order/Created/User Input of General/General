*****************/
if(input.General == true)
{
	show Select_Code;
	hide No;
	hide Billing_Type;
	show Sell_to_Customer_No;
	show Sell_to_Contact_No;
	show Sell_to_Customer_Name;
	show Sell_to_Address;
	show Deal_Code;
	show From_Date;
	show Thru_Date;
	show Order_Date;
	show Customer_PO;
	show Comments;
	show Posting_Description;
	show Status;
}
else
{
	hide Select_Code;
	hide No;
	hide Sell_to_Customer_No;
	hide Sell_to_Contact_No;
	hide Sell_to_Customer_Name;
	hide Sell_to_Address;
	hide Deal_Code;
	hide From_Date;
	hide Thru_Date;
	hide Order_Date;
	hide Customer_PO;
	hide Comments;
	hide Posting_Description;
	hide Status;
	hide Billing_Type;
}

{
	hide Code;
	hide Name1;
	hide Phone_Number1;
	hide Customer;
	hide Contact;
	hide Tax_Area_Code;
	hide Name_2;
	hide Tax_Liable;
	hide Address;
	hide Location_Code;
	hide Location_Code;
	hide Shipment_Method_Code;
	hide Shipping_Agent_Code;
}
